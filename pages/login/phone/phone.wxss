.loginImgView {
  width: 100%;
  height: 20vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loginImg {
  border-radius: 50%;
}

.sectionOne {
  margin-top: 50rpx;
  width: 100%;
  height: 40vh;
}

.three {
  padding-left: 35rpx;
  width: 100%;
  height: 20%;
  display: flex;
  align-items: center;
  margin-top: 25rpx;
}

.threeLogin {
  width: 100%;
  height: 15%;
  display: flex;
  align-items: center;
  margin-top: 60rpx;
}

/*输入框1*/
.weui-input1 {
  height: 85rpx;
  border-radius: 30px;
  width: 74%;
  padding-left: 90rpx;
  font-size: 25rpx;
  background-color: rgb(236, 236, 236);
}

/*输入框2*/
.weui-input2 {
  height: 85rpx;
  border-radius: 30px;
  width: 50%;
  padding-left: 90rpx;
  font-size: 25rpx;
  background-color: rgb(236, 236, 236);
}

/*登录按钮*/
.loginButton {
  width: 85%;
  height: 95rpx;
  line-height: 95rpx;
  background: -webkit-linear-gradient(right, rgb(250, 106, 4), rgb(237, 76, 4));
  background: -o-linear-gradient(right, rgb(250, 106, 4), rgb(237, 76, 4));
  background: -moz-linear-gradient(right, rgb(250, 106, 4), rgb(237, 76, 4));
  background: -mos-linear-gradient(right, rgb(250, 106, 4), rgb(237, 76, 4));
  color: white;
  border-radius: 30px;
  font-size: 30rpx;
  text-align: center;
  margin: 0 auto;
}

/*图标*/
.icon {
  width: 30rpx;
  height: 45rpx;
}

.move2 {
  width: 35rpx;
}

.move {
  position: relative;
  top: 0rpx;
  left: 60rpx;
}

/*验证码*/
.codeTest {
  width: 150rpx;
  margin-left: 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  color: white;
  font-size: 25rpx;
  border-radius: 30px;
  /* background: rgb(155, 152, 152); */
  text-align: center;
  background: -webkit-linear-gradient(right, rgb(250, 106, 4), rgb(237, 76, 4));
  background: -o-linear-gradient(right, rgb(250, 106, 4), rgb(237, 76, 4));
  background: -moz-linear-gradient(right, rgb(250, 106, 4), rgb(237, 76, 4));
  background: -mos-linear-gradient(right, rgb(250, 106, 4), rgb(237, 76, 4));
}

.btnLine {
  margin-top: 30rpx;
  background-image: linear-gradient(90deg, #eef1f5 11%, rgba(237, 240, 244, 0.00) 35%, rgba(238, 241, 243, 0.00) 64%, #eef1f5 86%);
  width: 100%;
  height: 1px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgba(46, 45, 45, 0.596);
}

.wxLogin {
  margin-top: 50rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.wxImg {
  width: 95rpx;
  height: 95rpx;
}

.radio-group {
  display: flex;
  flex-direction: column;
  justify-content: start;
}

.radio {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}