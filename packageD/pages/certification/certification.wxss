  height: 100%;
}

.testInfo {
  background-color: white;
  width: 90%;
  margin: 0 auto;
  /* display: inline-block; */
  word-break: break-all;
  margin-top: 15rpx;
  padding: 20rpx;
}

.srcollView {
  /* height: 100%; */
