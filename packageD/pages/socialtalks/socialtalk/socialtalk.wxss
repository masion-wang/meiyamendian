page {
  background-color: #f3f3f3;
  height: 100%;
}

.srollView {
  height: 100%;
}

.hopeWords {
  width: 90%;
  background-color: white;
  /* height:5vh; */
  margin: 0 auto;
  margin-top: 30rpx;
  border-radius: 5px;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
}

.info {
  display: flex;
  align-items: center;
  width: 100%;
}

.img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.width70 {
  min-width: 70%;
  /* border: 1rpx solid black; */
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
}

.personInfo {
  display: flex;
  align-items: center;
}

.personInfo>view {
  margin-right: 20rpx;
}

.name {
  font-size: 33rpx;
  font-weight: 600;
}

.light {
  color: #737171;
}

.title {
  font-weight: 600;
  font-size: 33rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.content {
  font-size: 28rpx;
  color: #737171;
}

.threeImg {
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  margin-top: 20rpx;
}

.width30 {
  width: 200rpx;
  height: 200rpx;
  border-radius: 5px;
}

.marginLeft {
  margin-left: 30rpx;
}

.btnLine {
  background-image: linear-gradient(90deg, rgba(237, 240, 244, 0.00) 1%, #eef1f5 5%, #eef1f5 95%, rgba(237, 240, 244, 0.00) 99%);
  width: 100%;
  height: 1px;
  margin-top: 20rpx;
}

.likeAndComment {
  margin-top: 15rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

.img2 {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.down2 {
  position: relative;
  top: 2rpx;
}

.like {
  display: flex;
  align-items: center;
}

.comment {
  display: flex;
  align-items: center;
}

/*输出*/
.output {
  position: absolute;
  z-index: 999;
  top: 75%;
  right: 5%;
  width: 120rpx;
  height: 120rpx;
}

.small {
  font-size: 25rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
}

.wordTip {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999999;
  font-size: 25rpx;
  margin-top: 23rpx;
  margin-bottom: 40rpx;
}

.content-bg {
  pointer-events: auto;
  height: 100%;
  width: 100%;
  position: fixed;
  left: 0px;
  top: 0px
}

.content-block {
  pointer-events: auto;
  position: absolute;
  z-index: 999;
  top: 75%;
  left: 90vw;
  border-radius: 50%;
  text-align: center;
  line-height: 50px;
}

movable-area {
  pointer-events: none;
}

movable-view {
  pointer-events: auto;
}

.placeholder2 {
  height: 70rpx;
}