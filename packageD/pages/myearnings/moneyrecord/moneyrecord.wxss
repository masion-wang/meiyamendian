.scrollView {
  /* border: 1px solid black; */
  margin-top: 10rpx;
  height: 85%;
  padding-bottom: 1vh;
}

.scroll-view ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

.selecttime {
  width: 85%;
  margin: 0 auto;
  background-color: white;
  padding: 10rpx;
  border-radius: 5px;
  position: fixed;
  top: 30rpx;
  left: 0px;
  right: 0px;
  margin-left: auto;
  margin-right: auto;
  height: 70rpx;
  z-index: 999;
  text-align: center;
  line-height: 70rpx;
  /* border:1px solid black; */
}

.placeholder {
  width: 100%;
