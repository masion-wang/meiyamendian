page {
  height: 100%;
  background-color: #f3f3f3;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.background {
  margin-top: 20rpx;
  width: 95%;
  height: 30vh;
  position: relative;
  margin-bottom: 15rpx;
}

.sum {
  color: white;
  position: absolute;
  top: 20rpx;
  left: 30rpx;
}

.howmany {
  display: flex;
  justify-content: center;
  align-items: baseline;
  color: white;
  position: absolute;
  top: 35%;
  left: 47%;
}

.big {
  font-size: 55rpx;
}

.already {
  color: white;
  position: absolute;
  top: 75%;
  left: 22%;
}

.shareList {
  width: 92%;
  /* height: 60vh; */
  margin: 0 auto;
  background-color: white;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  align-items: baseline;
}

.shareListtitle {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  /* border-bottom: 1px solid rgb(182, 178, 178); */
}

.shareListtitleleft {
  font-size: 40rpx;
}

.shareListtitleright {
  display: flex;
  justify-content: center;
  align-items: center;
}

.right {
  font-size: 22rpx;
  color: #706e6e;
}

.btnLine {
  background-image: linear-gradient(90deg, rgba(237, 240, 244, 0.00) 1%, #eef1f5 5%, #eef1f5 95%, rgba(237, 240, 244, 0.00) 99%);
  width: 100%;
  height: 1px;
}

.secondTitle {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.four {
  width: 25%;
  /* border: 1px solid black; */
  display: flex;
  justify-content: center;
  align-items: center;
}



.secondContent {
  width: 100%;
  /* border: 1px solid black; */
  /* height: 300rpx; */
  flex-direction: column;
  height: 52vh;

}

.info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.smallfour {
  width: 25%;
  font-size: 23rpx;
  /* border: 1px solid black; */
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  color: #7c7979;
}

.scroll-view ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

.wordTip {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999999;
  font-size: 25rpx;
}