page {
  width: 100%;
  height: 100%;
  background: -webkit-linear-gradient(left, #f7b63cf3, #f6d73eef);
  background: -o-linear-gradient(left, #f7b63cf3, #f6d73eef);
  background: -moz-linear-gradient(left, #f7b63cf3, #f6d73eef);
  background: -mos-linear-gradient(left, #f7b63cf3, #f6d73eef);
  background-image: linear-gradient(tobottom, #f7b63c, rgba(255, 255, 255, 0.287));
