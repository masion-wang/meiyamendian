  border-radius: 5px;
  font-size: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input2 {
  width: 60rpx;
  font-size: 35rpx;
  font-weight: 700;
}

.used {
  position: relative;
  margin: 0 auto;
  margin-top: 20rpx;
  width: 94%;
  height: 200rpx;
  border-radius: 5px;
  background-color: white;
  opacity: 0.5;
}

.done {
  opacity: 0.5;
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  right: 0rpx;
  top: 10rpx;
}

.end {
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  font-size: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}