.weui-tabs {
  width: 100%;
  height: 100rpx;
}

.weui-tabs-bar__wrp {
  width: 100%;
  height: 100rpx;
  background: #fff
}

.weui-tabs-bar__content {
  width: 100%;
  height:100rpx;
  white-space: nowrap;
  display: flex;
  justify-content: space-around;
  align-items: center; 
}

.weui-tabs-bar__item {
  display: inline-block
}

.weui-tabs-bar__title {
  display: inline-block;
  border-bottom-width: 2px;
  border-bottom-style: solid;
  border-bottom-color: transparent
}